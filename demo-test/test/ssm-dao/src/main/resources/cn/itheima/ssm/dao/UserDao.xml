<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itheima.ssm.dao.UserDao">
        <select id="findUsers" parameterType="users" resultType="users">
            SELECT * FROM users WHERE username = #{username} AND password=#{password}
        </select>
        <insert id="zhuce" parameterType="users">
            INSERT INTO users(username,password,telephone,state)
            VALUES (#{username},#{password},#{telephone},#{state})
        </insert>
</mapper>